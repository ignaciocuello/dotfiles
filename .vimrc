""" Mappings --------------------------------
let mapleader=" "

map <leader>J :normal! J<CR>
map J gT
map K gt

set nocompatible
filetype off

" highlight search incrementally
set hls is
set number
" relative up and down line numbers
set relativenumber
syntax on
set nowrap

set clipboard=unnamedplus
" draw a red line on the 80th column
set colorcolumn=80

